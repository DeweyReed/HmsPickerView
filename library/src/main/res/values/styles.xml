<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Hpv" />

    <style name="Hpv.ThemeOverlay.Control.Accent" parent="ThemeOverlay.AppCompat">
        <!-- Attributes from android.support.v7.appcompat -->
        <item name="colorControlActivated">?attr/colorAccent</item>
    </style>

    <style name="Hpv.Widget.Button.TimerSetupDigit" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:paddingTop">@dimen/hpv_digit_padding</item>
        <item name="android:paddingBottom">@dimen/hpv_digit_padding</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/hpv_digit_font_size</item>
    </style>

</resources>